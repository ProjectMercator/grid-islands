{
  "name": "@veritymedia/grid-islands",
  "version": "1.2.1",
  "type": "module",
  "packageManager": "pnpm@9.14.2",
  "license": "MIT",
  "author": "qmhc",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build:docs": "pnpm -C docs build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path .",
    "dev": "pnpm -C dev-server serve",
    "dev:docs": "pnpm -C docs serve",
    "prettier": "prettier --write \"{src,dev-server,docs}/**/*.{ts,js,json,css,pcss,scss,vue,html,md}\"",
    "prettier:scripts": "prettier --write \"scripts/**/*.{ts,js,json}\"",
    "publish:ci": "tsx scripts/publish.ts",
    "release": "tsx scripts/release.ts",
    "test": "vitest run",
    "test:cover": "vitest run --coverage",
    "test:dev": "vitest dev"
  },
  "main": "lib/index.cjs",
  "module": "es/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./es/index.mjs",
      "require": "./lib/index.cjs"
    },
    "./es": {
      "types": "./dist/index.d.ts",
      "import": "./es/index.mjs"
    },
    "./lib": {
      "types": "./dist/index.d.ts",
      "require": "./lib/index.cjs"
    },
    "./es/*.mjs": {
      "types": "./dist/*.d.ts",
      "import": "./es/*.mjs"
    },
    "./es/*": {
      "types": [
        "./dist/*.d.ts",
        "./dist/*/index.d.ts"
      ],
      "import": "./es/*.mjs"
    },
    "./lib/*.cjs": {
      "types": "./dist/*.d.ts",
      "require": "./lib/*.cjs"
    },
    "./lib/*": {
      "types": [
        "./dist/*.d.ts",
        "./dist/*/index.d.ts"
      ],
      "require": "./lib/*.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "es",
    "lib",
    "src",
    "CHANGELOG.md",
    "types.d.ts"
  ],
  "keywords": [
    "flex",
    "components",
    "vue",
    "vexip",
    "plugin",
    "toolkit",
    "vite",
    "layout",
    "grid-layout",
    "vue-grid-layout"
  ],
  "dependencies": {
    "@vexip-ui/hooks": "^2.8.0",
    "@vexip-ui/utils": "^2.16.1",
    "interactjs": "^1.10.27"
  },
  "devDependencies": {
    "@interactjs/types": "^1.10.27",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.15.12",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.0",
    "@vexip-ui/prettier-config": "^1.0.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "conventional-changelog-angular": "7.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "execa": "^9.5.2",
    "happy-dom": "^17.4.6",
    "is-ci": "^4.1.0",
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prompts": "^2.4.2",
    "sass": "^1.87.0",
    "semver": "^7.7.1",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.3",
    "vue": "^3.5.13"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "vue"
      ]
    },
    "patchedDependencies": {
      "conventional-changelog-angular@7.0.0": "patches/conventional-changelog-angular@7.0.0.patch"
    }
  }
}
